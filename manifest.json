{

    "manifest_version": 2,
    "name": "Youtube Video Summariser",
    "version": "1.0",
  
    "description": "Uses OpenAI's ChatGPT model to summarise youtube videos, save time, and also be able to ask qusetions about the video and what it talks about.",
  
    "icons": {
    },
    "permissions": [ "https://www.youtube.com/watch?*", "https://www.youtube.com/playlist?*", "https://chat.openai.com/backend-api/conversation","storage", "webRequest", "webRequestBlocking", "webNavigation"],
    "content_scripts": [
      {
        "matches": [ "https://www.youtube.com/watch?*", "https://www.youtube.com/playlist?*"],
        "js": ["summariser.js"],
        "css": ["style.css"]
      }
    ]
  
  }
  