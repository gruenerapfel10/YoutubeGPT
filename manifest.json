{

    "manifest_version": 2,
    "name": "YoutubeGPT",
    "version": "1.0",
    "description": "Summarize any-length youtube videos in minutes, save time, become more productive, be a better learner. Embedded GUI for youtube videos, adds a button to the right of titles of qualifying youtube videos.",
    "icons": {
    },
    "background": {
      "scripts": ["background.js"]
    },
    "permissions": ["tabs", "*://*.youtube.com/*", "https://www.youtube.com/watch?*", "https://www.youtube.com/playlist?*", "https://chat.openai.com/backend-api/conversation","storage", "webRequest", "webRequestBlocking", "webNavigation", "activeTab", "<all_urls>", "cookies", "https://chat.openai.com/api/auth/session"],
    "content_scripts": [
      {
        "matches": [ "*://*.youtube.com/*", "https://www.youtube.com/watch?*", "https://www.youtube.com/playlist?*"],
        "js": ["summariser.js"],
        "css": ["style.css"]
      }
    ]
  }